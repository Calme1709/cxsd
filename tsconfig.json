{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "removeComments": false,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ]
}
